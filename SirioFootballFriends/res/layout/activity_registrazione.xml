<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login2"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="horizontal|vertical"
    tools:context="com.github.nicolediana.siriofootballfriends.RegistrazioneActivity" >

    <Button
        android:id="@+id/reg"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@drawable/registrati2" />

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/label_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:layout_weight="0.40"
                android:text="@string/label_email"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/rosso2"
                android:textSize="@dimen/abc_text_size_large_material"
                android:textStyle="bold" />

        </TableRow>
		
		<TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="30dp" >

            <EditText
                android:id="@+id/email"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColor="@color/bianco"
                android:textColorHint="@color/bianco"
                android:background="@drawable/bordo"                
                android:layout_marginLeft="60dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textSize="@dimen/abc_text_size_large_material"
                android:textStyle="bold">
                <requestFocus />
            </EditText>
        </TableRow>
        
		<TableRow
		    android:id="@+id/tableRow3"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="30dp"
		    android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/label_psw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:layout_weight="0.40"
                android:text="@string/label_psw"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/rosso2"
                android:textSize="@dimen/abc_text_size_large_material"
                android:textStyle="bold" />

        </TableRow>
		
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp" >

            <EditText
                android:id="@+id/psw"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"                
                android:ems="10"
                android:hint="@string/psw"
                android:inputType="textPassword"
                android:textColor="@color/bianco"
                android:textColorHint="@color/bianco"
                android:background="@drawable/bordo"                
                android:layout_marginLeft="60dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textSize="@dimen/abc_text_size_large_material"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/label_psw2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:layout_weight="0.40"
                android:text="@string/label_psw2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/rosso2"
                android:textSize="@dimen/abc_text_size_large_material"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp" >

            <EditText
                android:id="@+id/psw2"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:ems="10"
                android:hint="@string/psw2"
                android:inputType="textPassword"
                android:textColor="@color/bianco"
                android:textColorHint="@color/bianco"
                android:background="@drawable/bordo"                
                android:layout_marginLeft="60dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textSize="@dimen/abc_text_size_large_material"
                android:textStyle="bold" />

        </TableRow>

        <Button
            android:id="@+id/bottone_salva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:background="@drawable/salva"
            android:onClick="onClickSalvaReg"
            android:textColor="@color/rosso2"
            android:textStyle="bold" />
            
</LinearLayout>
